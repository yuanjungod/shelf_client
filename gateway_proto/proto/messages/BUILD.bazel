    name = "messages_go_proto",
    importpath = "guoxiaomei.com/device/proto/messages",
    proto = ":messages_proto",
    visibility = ["//visibility:public"],
    deps = ["//device/proto/state:go_default_library"],
)

go_library(
    name = "go_default_library",
    importpath = "guoxiaomei.com/device/proto/messages",
