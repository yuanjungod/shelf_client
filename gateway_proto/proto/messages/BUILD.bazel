load("@io_bazel_rules_go//go:def.bzl", "go_library")
load("@io_bazel_rules_go//proto:def.bzl", "go_proto_library")

proto_library(
    name = "messages_proto",
    srcs = ["device_messages.proto"],
    visibility = ["//visibility:public"],
    deps = ["//device/proto/state:state_proto"],
)

